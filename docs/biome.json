{
    "extends": ["../biome.json"],
    "formatter": {
        "ignore": ["archive/**"]
    },
    "linter": {
        "ignore": ["archive/**", ".astro"]
    },
    "overrides": [
        {
            "include": ["*.astro"],
            "linter": {
                "rules": {
                    "style": {
                        "useConst": "off",
                        "useImportType": "off"
                    }
                }
            }
        }
    ]
}
