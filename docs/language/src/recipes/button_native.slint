import { VerticalBox, Button } from "std-widgets.slint";
export Recipe := Window {
    property <int> counter: 0;
    callback button_pressed <=> button.clicked;
    VerticalBox {
        button := Button {
            text: "Button, pressed \{root.counter} times";
        }
    }
}
