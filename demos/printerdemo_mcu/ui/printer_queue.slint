    fake-shadow := Rectangle {
        y: 2px;
        width: 100%;
        height: 100%;
        background: #eeeeee;
        border-radius: 14px;
    }

    Rectangle {
        width: 100%;
        height: 100%;
        background: white;
        border-radius: 14px;
        border-width: 1px;
        border-color: #d4dae1;
    }

    // clip: true;
    
    // states [
    //     expanded when root.expanded : {
