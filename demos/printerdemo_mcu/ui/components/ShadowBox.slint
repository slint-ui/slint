export component ShadowBox inherits Rectangle {
    border-radius: 14px;
    fake-shadow := Rectangle {
        y: 2px;
        background: #eeeeee;
        border-radius: root.border-radius;
    }

    bg := Rectangle {
        background: white;
        border-radius: root.border-radius;
        border-width: 2px;
        border-color: #E2E8F0;
    }
}
