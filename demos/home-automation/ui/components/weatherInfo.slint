import { Palette,Measurements,Colors, Style } from "../common.slint";
import { Info } from "info.slint";
import { HaText } from "./general/haText.slint";
import { Api, WeatherData, WeatherCondition } from "../api.slint";

export component Day inherits Rectangle {
    width: 38px;
    in property <WeatherData> weather-data;
    in property <bool> highlight: false;
    in property <float> scale: 1.0;

    Rectangle {
        width: 48px;
        height: 150px;
        border-color: #ffffff;
        border-width: 1px;
        border-radius: self.width / 2;
        opacity: 35%;
        background: #241433;
    }

    VerticalLayout {
        alignment: center;
        width: 38px;
        spacing: 5px;
        HaText {
            text: weather-data.day;
            horizontal-alignment: center;
            color: Palette.info-foreground;
            font-size: Style.H4-font-size;
        }

        if weather-data.condition == WeatherCondition.sunny: Rectangle {
            height: 38px;
            Image {
                source: @image-url("../images/weather/sunny.png");
                width: 38px;
            }
        }
        if weather-data.condition == WeatherCondition.rainy: Rectangle {
            height: 38px;
            Image {
                source: @image-url("../images/weather/rainy.png");
                width: 38px;
            }
        }
        if weather-data.condition == WeatherCondition.cloudy: Rectangle {
            height: 38px;
            Image {
                source: @image-url("../images/weather/cloudy.png");
                width: 38px;
            }
        }

        if weather-data.condition == WeatherCondition.sunny-cloudy: Rectangle {
            height: 38px;
            Image {
                source: @image-url("../images/weather/sunny-cloudy.png");
                width: 38px;
            }
        }

        if weather-data.condition == WeatherCondition.sunny-rainy: Rectangle {
            height: 38px;
            Image {
                source: @image-url("../images/weather/sunny-rainy.png");
                width: 38px;
            }
        }
        HorizontalLayout {
            alignment: center;
            HaText {
                text: weather-data.temperature ;
                horizontal-alignment: center;
                color: Palette.info-foreground;
                font-size: Style.H3-font-size;
            }
            Text {
                text: "°C";
                color: white;
                font-size: 8px;
            }
        }
    }


}

export component WeatherInfo {
    in property <int> index;
    property <length> margin: 16px;
    in property <string> name;
    in property <string> id;
    in property <bool> full-screen: false;

    Rectangle {
        y: 1px;
        width: parent.width - margin;
        height: parent.height - 2px;
        background: black;
        HorizontalLayout {
            alignment: center;
            spacing: (root.width - margin - (38px * 5))/4;
            Day {
                weather-data: Api.weather-forecast[0];
                highlight: true;
            }
            Day {
                weather-data: Api.weather-forecast[1];
            }

            Day {
                weather-data: Api.weather-forecast[2];
            }

            Day {
                weather-data: Api.weather-forecast[3];
            }

            Day {
                weather-data: Api.weather-forecast[4];
            }
        }
    }

}
