{
  "name": "slint-node",
  "version": "1.3.0",
  "main": "index.js",
  "types": "index.d.ts",
  "license": "GPL-3.0-only OR LicenseRef-Slint-Royalty-free-1.1 OR LicenseRef-Slint-commercial",
  "napi": {
    "name": "slint-ui"
  },
  "devDependencies": {
    "esbuild": "^0.14.54",
    "@napi-rs/cli": "^2.15.2",
    "@swc-node/register": "^1.5.5",
    "@swc/core": "^1.3.32",
    "ava": "^5.3.0",
    "jimp": "^0.22.8"
  },
  "engines": {
    "node": ">= 10"
  },
  "scripts": {
    "artifacts": "napi artifacts",
    "compile": "esbuild index.ts --bundle --external:*.node --format=cjs --platform=node --outfile=index.js",
    "build": "napi build --platform --release --js napi.js --dts napi.d.ts && npm run compile",
    "build:debug": "napi build --platform --js napi.js --dts napi.d.ts && npm run compile",
    "install": "npm run build",
    "prepublishOnly": "napi prepublish -t npm",
    "test": "ava",
    "universal": "napi universal",
    "version": "1.3.0"
  },
  "ava": {
    "require": [
      "@swc-node/register"
    ],
    "extensions": [
      "ts"
    ],
    "timeout": "2m",
    "workerThreads": false,
    "environmentVariables": {
      "TS_NODE_PROJECT": "./tsconfig.json"
    }
  }
}
