import { SpinBox, Button, CheckBox, Slider, GroupBox, StandardListView, GridBox } from "std-widgets.slint";
import { Label, Page, Preview } from "common.slint";


export component CopyPage inherits Page {
    layout := GridLayout {
        padding-left: 40px;
        padding-right: 40px;
        spacing: 20px;
        padding-top: 20px;
        padding-bottom: 20px;

        Row {
            preview := Preview {
                height: root.height - layout.padding-top - layout.padding-bottom;
            }
            GridBox {
                Row {
                    Label {
                        text: "Copies:";
                    }
                }

                Row {
                    SpinBox {
                        horizontal-stretch: 1;
                    }
                }
                Row {
                    Button {
                        text: "Print Page";
                        horizontal-stretch: 1;
                    }
                }
                Row {
                    Rectangle {}
                }
            }
        }
    }
}
