import { MenuBar, TopBar, Usage, IndoorTemperature, Humidity, MyDevices,
    UsageDiagram, LightIntensity, Clock
} from "iot-dashboard.slint";


component MainContent inherits VerticalLayout {
    alignment: start;
    spacing: 24px;
    TopBar {
        Clock {
        }
    }

    GridLayout {
        spacing: 6px;
        padding-left: 19px;
        padding-top: 0px;
        padding-right: 17px;
        padding-bottom: 24px;

        Usage {
            rowspan: 2;
        }
        IndoorTemperature {
            row: 0; col: 1;
        }
        Humidity {
            row: 1; col: 1;
        }
        MyDevices {
            row: 0; col: 2;
            rowspan: 2;
        }
        UsageDiagram {
            row: 2; col: 0;
            colspan: 2;
        }
        LightIntensity {
            row: 2; col: 2;
        }
    }
}

component MainWindow inherits Window {
    title: "IOT dashboard";
    HorizontalLayout {
        padding: 0; spacing: 0;
        MenuBar {}
        MainContent {}
    }
}
