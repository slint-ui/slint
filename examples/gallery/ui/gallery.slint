import { CheckBox, StandardListView, StyleMetrics } from "std-widgets.slint";
import { AboutPage, ControlsPage, ListViewPage, TextEditPage } from "pages/pages.slint";
import { GallerySettings } from "gallery_settings.slint";
import { Navigator } from "navigator.slint";
import { SideBar } from "side_bar.slint";

App := Window {
  min-width: 760px;
    min-height: 680px;
    title: "Slint Gallery";
    icon: @image-url("../../../logo/slint-logo-small-light-128x128.png");

    HorizontalLayout {  
        side-bar := SideBar {  
            title: "Slint Widgets Gallery";
            model: ["Controls", "ListView", "TextEdit", "About"];

            CheckBox { 
                text: "Disable widgets";
                checked <=> GallerySettings.widgets-disabled;
            }
        }
        
        navigator := Navigator {  
            current-item <=> side-bar.current-item;

            ControlsPage {  
                height: navigator.height;
            }

            ListViewPage {  
                height: navigator.height;
            }

            TextEditPage {  
                height: navigator.height;
            }

            AboutPage {  
                height: navigator.height;
            }
        }
    }
}
