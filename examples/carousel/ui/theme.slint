import "fonts/Roboto-Regular.ttf";
import "fonts/Roboto-Bold.ttf";

export global Theme := {
    // brushes
    property <brush> window-background: #2C2F36;
    property <brush> background-regular: #0025FF;
    property <brush> background-hover: #FFFFFF;
    property <brush> background-pressed: #BDBDBD;
    property <brush> border-color-regular: @linear-gradient(90deg, #757575 0%, #616161 100%);
    property <brush> border-color-selected: @linear-gradient(90deg, #FAFAFA 0%, #BDBDBD 100%);
    property <brush> foreground: #FFFFFF;
    property <brush> foreground-inverted: #637381;
    property <brush> foreground-hover: #0025FF;
    property <brush> foreground-discreet: #BDBDBD;

    // durations
    property <duration> duration-slow: 1600ms;
    property <duration> duration-regular: 250ms;
    property <duration> duration-fast: 150ms;

    // radius
    property <length> radius-small: 2px;
    property <length> radius-regular: 4px;
    property <length> radius-medium: 8px;
    property <length> radius-big: 16px;

    // sizes
    property <length> size-small: 24px;
    property <length> size-regular: 32px;
    property <length> size-medium: 128px;
    property <length> size-big: 200px;

    // spacings
    property <length> spacing-small: 2px;
    property <length> spacing-regular: 4px;
    property <length> spacing-medium: 8px;
    property <length> spacing-big: 16px;
    property <length> spacing-extra-big: 32px;

    // typo
    property <string> font-family: "Roboto";
    property <length> font-size-small: 10px;
    property <length> font-size-regular: 12px;
    property <length> font-size-medium: 16px;
    property <length> font-size-big: 20px;
    property <length> font-size-extra-big: 24px;
    property <int> font-weight-regular: 400;
    property <int> font-weight-bold: 900;

    // icons
    property <length> iocn-size-medium: 14px;
}