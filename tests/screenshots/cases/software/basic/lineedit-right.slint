import { LineEdit } from "std-widgets.slint";

// The purpose of this test is to make sure the cursor is visible in a LineEdit that has `horizontal-alignment: right`
// (and that it is at the end to the right)
export component TestCase inherits Window {
    forward-focus: le;
    width: 64px;
    height: le.preferred-height;
    VerticalLayout {
        alignment: start;
        le := LineEdit {
            horizontal-alignment: right;
            placeholder-text: "Xx";
        }
    }
}
