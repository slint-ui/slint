export global Glob {
    in-out property <[string]> model: ["Hello", "World"];
    in-out property <bool> condition: true;
    callback clicked(string);
    clicked => {
        model = ["oops"];
    }
    in-out property <string> value;
}

component Button {
    callback clicked();
    in property <string> text;
    Rectangle {
        background: yellow;
        Text { text: text; }
        TouchArea {
            clicked => {clicked();}
        }
    }
}


component TestCase inherits Window {
    width: 300px;
    height: 300px;
    VerticalLayout {
        for string in Glob.model: Rectangle {
            if Glob.condition: Button {
                text: string;
                width: 80%;
                height: 80%;
                clicked => {
                    Glob.value = string;
                    Glob.clicked(string);
                    //Glob.value = string; // FIXME: this still crashes (#3464)
                }
            }
        }
        Rectangle {}
    }
}

