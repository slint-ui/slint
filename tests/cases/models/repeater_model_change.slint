TestCase := Rectangle {
    width: 100phx;
    height: 100phx;

    property <int> creation-count: 0;
    property <bool> condition;
    property <length> test-width: preferred-width;

    HorizontalLayout {
        if condition: Rectangle {
            preferred-width: 10px;
            init => {
                creation-count += 1;
            }
        }
    }

}


