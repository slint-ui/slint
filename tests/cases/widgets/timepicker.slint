import { TimePicker, Time, Button } from "std-widgets.slint";
export { Time }

export component TestCase inherits Window {
    width: 600px;
    height: 600px;

    time-picker := TimePicker {
        x: 0;
        y: 0;
    }

    in property <Time> time <=> time-picker.time;
}

