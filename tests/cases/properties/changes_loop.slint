export component TestCase inherits Window {

    in-out property <int> value: 42;

    private property<int> value-plus-1: value + 1;

    changed value-plus-1 => {
        result = value-plus-1 * 10;
    };

    out property <int> result: value - 1;

    changed result => {
        value = value-plus-1;
    }
}


