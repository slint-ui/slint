Container := Rectangle {
    GridLayout {
        padding: 0phx;
        spacing: 0phx;
        Row {
            Rectangle {
                width: 50phx;
                background: green;
            }
            @children
            Rectangle {
                width: 2phx;
                background: yellow;
            }
        }
    }
}

SuperContainer := Container {}
ExtraContainer := SuperContainer {}

MegaContainer := Rectangle {
    ExtraContainer {
        Rectangle {
            background: violet;
            width: 100phx;
        }
        @children
        Rectangle {
            background: purple;
            width: 4phx;
        }
        width: parent.width;
        height: parent.height;

    }
}

TestCase := MegaContainer {
    width: 300phx;
    height: 200phx;

    rect1 := Rectangle {
        background: black;
    }


    property <bool> rect1_pos_ok: rect1.x == 150phx;
    out property <bool> test: rect1_pos_ok;
}
