export MainWindow := Window {
    title: "SixtyFPS Image Scaling Example";
    preferred-width: 800px;
    preferred-height: 600px;

    HorizontalLayout {
        Image {
            source: @image-url("/tmp/o.png");
            image-rendering: smooth;
            colorize: red;
        }
        Image {
            source: @image-url("/tmp/o.png");
            image-rendering: pixelated;
            colorize: red;
        }
    }
}
