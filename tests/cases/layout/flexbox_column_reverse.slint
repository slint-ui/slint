// Test FlexBoxLayout with column-reverse direction

export component TestCase inherits Window {
    width: 300px;
    height: 200px;

    FlexBoxLayout {
        flex-direction: column-reverse;
        spacing: 10px;

        r1 := Rectangle {
            width: 50px;
            height: 50px;
            background: red;
        }

        r2 := Rectangle {
            width: 50px;
            height: 50px;
            background: green;
        }

        r3 := Rectangle {
            width: 50px;
            height: 50px;
            background: blue;
        }
    }

    // With column-reverse: items flow bottom to top, aligned to bottom edge
    // Window height: 200px, each item: 50px, spacing: 10px
    // r1 (first) at bottom: y = 200 - 50 = 150
    // r2 (second): y = 150 - 50 - 10 = 90
    // r3 (third): y = 90 - 50 - 10 = 30
    out property <length> r1_x: r1.x;
    out property <length> r1_y: r1.y;
    out property <length> r2_x: r2.x;
    out property <length> r2_y: r2.y;
    out property <length> r3_x: r3.x;
    out property <length> r3_y: r3.y;

    out property <bool> test: r1.x == 0px && r2.x == 0px && r3.x == 0px &&  // same column
                              r1.y == 150px && r2.y == 90px && r3.y == 30px;  // reverse order from bottom
}

