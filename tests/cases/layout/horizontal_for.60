export TestCase := Rectangle {
    width: 100phx;
    height: 100phx;
    property<int> value: -10;

    HorizontalLayout {

        Rectangle { color: orange; }

        for i in [
            {color: #0f0, value: 8, },
            {color: #00f, value: 9, },
            {color: #f00, value: 10, },
        ] : Rectangle {
            color: i.color;
            TouchArea {
                width: 100%;
                height: 100%;
                clicked => {
                    root.value = i.value;
                }
            }
        }

        Rectangle { color: pink; }
    }
}

// There should be 5 rectangle: so 100 devided by 5 is 20.

