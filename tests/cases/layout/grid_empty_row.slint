// Test that empty rows in GridLayout don't cause unbounded max-height
export component TestCase inherits Rectangle {
    width: 200phx;
    height: 200phx;

    GridLayout {
        spacing: 10phx;
        padding: 10phx;
        rect1 := Rectangle {
            background: red;
            col: 1;
            width: 50phx;
            height: 50phx;
        }

        rect2 := Rectangle {
            background: black;
            row: 2;
            col: 2;
            width: 50phx;
            height: 50phx;
        }
    }

    // With row 1 empty, min/max-height should be: 2 rects (100px) + 2 spacings (20px) + 2 paddings (20px) = 140px
    // Same for min/max-height (due to col 0 empty)
    out property <bool> test: root.min-height == 140phx && root.max-height == 140phx && root.min-width == 140phx && root.max-width == 140phx;
}

