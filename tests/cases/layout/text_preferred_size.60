TestCase := Window {
    width: 400px;
    height: 640px;
    VerticalLayout {
        padding: 0px;
        alignment: center;
        text := Text {
            text: "This line needs to be broken into multiple lines of text and yet be centered.";
            font_size: 20px;
            wrap: word-wrap;
        }
    }

    property <bool> test: text.height > 0 && text.width == root.width;
}

/*

