TestCase := Rectangle {
    width: 500phx;
    height: 500phx;

    Text {
        text: "The red rectangle should be centered horizontally on the green line";
        color: black;
    }

    Path {
        x: 250phx;
        y: 100phx;
        width: root.width;
        height: root.height;
        commands: "M 100 0 L 100 250 ";
        stroke_color: green;
        stroke_width: 2px;
    }

    PathLayout {
        x: 250phx;
        y: 100phx;
        width: root.width;
        height: root.height;
        commands: "M 100 0 L 100 250 ";

        Rectangle {
            background: red;
            width: 50phx;
            height: 50phx;
        }
    }
}