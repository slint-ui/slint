TestCase := Window {
    width: 500px;
    height: 550px;
    color: #ecedeb;

    property<[int]> xs: [1, 2, 3];

    VerticalLayout {
        padding: 0px;
        spacing: 0px;
        alignment: start;

        for x_[i] in xs: Rectangle {
            background: i == 0 ? red : i == 1 ? green : blue;
            height: 100px;
            VerticalLayout {
                padding: 1px;
                TouchArea {
                    clicked => { last_clicked = x_; }
                }
            }
        }

        for x_[i] in xs: Rectangle {
            background: i == 0 ? red : i == 1 ? green : blue;
            min-height: 50px;
            HorizontalLayout {
                padding: 1px;
                TouchArea {
                    clicked => { last_clicked = 10 + x_; }
                }
            }
        }
    }

    property<int> last_clicked;
}
