export component TestCase inherits Window {
    default-font-size: 20px;

    out property <string> clicked_text;

    property <[{ row: int, col: int}]> xy_model: [
        { row: 2, col: 1 },
        { row: 0, col: 2 },
        { row: 0, col: 1 },
        { row: 1, col: 0 },
        // TODO test duplicates, too (and overlap with colspan/rowspan)
    ];

    GridLayout {
        for entry in xy_model: txt := Text {
            text: entry.row + ", " + entry.col;
            row: entry.row;
            col: entry.col;
            width: 200phx;
            height: 50phx;
            TouchArea {
                clicked => {
                    clicked_text = txt.text;
                }
            }
        }
        next := Text {
            text: "(next)";
        }
    }
    out property <bool> test: next.row == 1 && next.col == 1;
}

