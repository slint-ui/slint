component DialogBox {

    public function show-dialog() {
        dialog.show();
    }

    dialog := PopupWindow {
        x: 10px;
        y: 20px;
        width: 20px;
        height: 20px;
        Rectangle {
            background: yellow;
            @children
        }
    }
}

export component TestCase inherits Window {
    height: 300px;
    width: 300px;
    in-out property<int> clicked;
    dialog := DialogBox {
        x: 100px;
        y: 0px;
        r:= Rectangle {
            background: purple;
            TouchArea {
                clicked => { clicked+=1; }
            }
        }
    }
    TouchArea {
        clicked => {
            dialog.show-dialog();
        }
    }
}


