component DialogBox inherits Rectangle {
    callback show-dialog();

    show-dialog() => {
        dialog.show();
    }

    dialog := PopupWindow { }
}

export component TestCase inherits Window {
    height: 30px;
    width: 30px;
    dialog := DialogBox { }
    TouchArea {
        clicked => {
            dialog.show-dialog();
        }
    }
}


