export component TestCase inherits Window {
    height: 100px;
    width: 100px;
    out property <int> clicked;
    GridLayout {
        Row {
            popup2 := PopupWindow {
                Rectangle {
                    background: yellow;
                    TouchArea {
                        clicked => { root.clicked += 1; }
                    }
                }

                // that's 20px relative to the Row which will be a 0x0 Empty centered in the window
                x: 20px;
                y: 20px;
                height: 50px;
                width: 50px;
            }

            ta := TouchArea {
                clicked => {
                    popup2.show();
                }
            }
        }
     }
}

