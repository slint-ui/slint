// Test for issue #781

global Glop := {
    property <int> r;
}

SubSubCompo := Rectangle {
    property <int> val;
    TouchArea {
        clicked => { Glop.r = val; }
    }
}
SubCompo := SubSubCompo { }

export TestCase := Window {
    width: 300px;
    height: 300px;
    HorizontalLayout {
        SubCompo { val: 88; }
        SubCompo { val: 99; }
    }

    property <int> result: Glop.r;
}

