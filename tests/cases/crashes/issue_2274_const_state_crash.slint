export component TestCase  {
    width: 300px;
    height: 300px;
    r:= Rectangle {
       property <bool> scrolling: false;

       states [
           active when scrolling : {
               opacity: 1;
               out {
                   animate opacity { duration: 800ms; }
               }
           }
           inactive when !scrolling : {
               opacity: 0;
           }
       ]
   }

   out property rect_opacity <=> r.opacity;
}

