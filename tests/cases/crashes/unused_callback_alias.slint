component TextInner inherits Text {
    callback panic();
    //init => { self.panic() }
    text: "Click me";
    TouchArea {
        clicked => { root.panic(); }
    }
}

component TextOuter {
    callback panic <=> inner.panic;
    inner := TextInner {
        width: 100%;
        height: 100%;
    }
}

export component TestCase inherits Window {
    width: 300px;
    height: 300px;
    TextOuter {
    }
}

