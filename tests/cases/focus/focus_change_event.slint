TestCase := Rectangle {
    width: 400phx;
    height: 400phx;
    forward-focus: focus-scope;

    focus-scope := FocusScope {}

    FocusScope {
        focus-changed-event => {
            scope-focused = self.has-focus;
        }
    }

    property <bool> scope-focused;
}

