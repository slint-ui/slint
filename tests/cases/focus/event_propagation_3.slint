export component TestCase inherits Window {
    width: 100phx;
    height: 100phx;
    f1 := FocusScope {
        key-pressed(event) => {
            r1 += event.text;
            return accept;
        }

        f2 := FocusScope {
            x: 50px;
            y: 50px;
            width: 50px;
            height: 50px;
            key-pressed(event) => {
                r2 += event.text;
                reject
            }
        }
    }

    in property<bool> click-to-focus-on-outer <=> f1.enabled;
    out property<string> r1;
    out property<string> r2;
    out property<bool> correct_focus: !f1.has_focus && f2.has_focus;
}

