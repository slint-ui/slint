    width: 400phx;
    height: 400phx;

    callback focus_rectangle();
    focus_rectangle => { rectangle.focus(); }

    rectangle := Rectangle {
        width: parent.width;
        height: 200phx;
        forward-focus: input;
    }

    input := TextInput {
        y: 200phx;
        width: parent.width;
        height: 200phx;
    }

    property<bool> input_focused: input.has_focus;
}

