export Player := {
    property <string> name;
    property <int> score;
}

TestCase := Rectangle {
    property<Player> player_1: {name : "Player1", score: 12 };
    property<Player> player_2: {name : "Player2", score: 24 };

    property<[Player]> players: [player_1, player_2];
    property<[Player]> player_list: [
        {name : "Simon", score: 1 },
        {name : "Olivier", score: 10 }
    ];

    property<int> player_2_score: player_2.score;
}

