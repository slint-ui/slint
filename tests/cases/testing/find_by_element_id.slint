component ButtonBase inherits Text { }

component Button inherits ButtonBase {
    accessible-role: button;
    accessible-label: "optimized";
    extra-label := Text { }
}

export component TestCase {
    first := Button { }

    second := Button {
        accessible-label: "plain";
    }

    // third
    Button {
        accessible-label: "third";
    }
}

