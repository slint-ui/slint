import { Button } from "std-widgets.slint";

export component TestCase inherits Window {
    width: 400px;
    height: 400px;

    in-out property <int> popup_click_count;
	in-out property <length> popup_x;

	VerticalLayout {
		alignment: start;

		HorizontalLayout {
			Button {
				text: "Open";
				clicked => {
					popup_x = 0px;
					popup.show();
				}
			}
		}
	}

    popup := PopupWindow {
        x: popup_x;
		y: 200px;
		width: 200px;
		height: 200px;
		close-policy: no-auto-close;

		TouchArea {
			clicked => {
				popup_click_count += 1;

				if (popup_x == 0px) {
					popup_x = 200px;
					popup.show();
				}
			}
		}
    }
}

/*

