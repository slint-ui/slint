assert!((instance.get_scale() - 1.95).abs() < 0.001);
// rotation = -20 - (-10) = -10
assert_eq!(instance.get_rotation(), -10.0);

slint_testing::send_pinch_gesture(&instance, 0.0, 300.0, 300.0, TouchPhase::Ended);
assert_eq!(instance.get_active(), false);
