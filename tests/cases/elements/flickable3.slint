TestCase := Window {
  width: 500phx;
  height: 500phx;

  Flickable {
    x: 0phx;
    width: 250phx;
    viewport-height: 800phx;

    t1 := TouchArea {
      height: 50phx;
    }
  }

  Flickable {
    x: 250phx;
    width: 250phx;
    viewport-width: 800phx;

    t2 := TouchArea {
      width: 50phx;
    }
  }

  property<bool> t1-has-hover: t1.has-hover;
  property<bool> t2-has-hover: t2.has-hover;
}

/*
```rust
