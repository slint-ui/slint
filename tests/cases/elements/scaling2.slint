export component TestCase  {
    width: 800px;
    height: 600px;

    in-out property <string> result;

    r-a := Rectangle {
        x: 10px;
        y: 10px;
        width: 20px;
        height: 20px;
        rotation-origin-x: 0;
        rotation-origin-y: 0;
        scale: 2;
        TouchArea {
            clicked => { result += "A"}
        }
    }


    r-b := Rectangle {
        x: 100px;
        y: 100px;
        width: 20px;
        height: 20px;
        scale: 3;
        scale-x: 0.5;
        TouchArea {
            clicked => { result += "B"}
        }
    }

    out property <bool> test:
        r-a.scale == 2 && r-a.scale-x == 2 && r-a.scale-y == 2 &&
        r-b.scale-x == 0.5 && r-b.scale-y == 3;


}

