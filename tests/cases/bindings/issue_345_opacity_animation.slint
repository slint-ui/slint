Sub := Rectangle {
    property <bool> cond;
    property <float> child_opacity: inner.opacity;
    inner := Rectangle {
        opacity: cond ? 0 : 1;
        animate opacity { duration: 1s; }
        background: green;
    }
}

TestCase := Rectangle {
    property cond <=> s.cond;
    property val <=> s.child_opacity;
    s := Sub {}
}

