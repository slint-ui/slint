import { ListView } from "std-widgets.slint";
struct ModelItem {
    name: string,
    checked: bool,
    value: int,
}


component CheckBox {
    width: 50px;
    in-out property <bool> checked;
    callback toggled(bool);
    Rectangle {
        background: checked ? green : red;
    }

    TouchArea {
        clicked => {
            checked = !checked;
            toggled(checked);
        }
    }
}

component ItemViewer {
    in-out property <ModelItem> item;
    callback toggled <=> chk.toggled;
    HorizontalLayout {
        TextInput {
            text <=> item.name;
        }

        chk := CheckBox { checked <=> item.checked; }
    }
}

component ItemListView {
    callback action(string);
    in-out property <[ModelItem]> model;
    VerticalLayout {
        for itm[idx] in model : HorizontalLayout {
            CheckBox {
                checked <=> itm.checked;
                toggled(checked) => {
                    action("ChkA:" + idx + ":" + (checked ? "on" : "off"));
                }
            }
            ItemViewer {
                item <=> itm;
            }
        }

    }
}

export component TestCase inherits Window {
    width: 500px;
    height: 500px;

    in-out property <[ModelItem]> model;
    in-out property <string> result;

    ItemListView {
        model <=> model;
        action(s) => {
            result += s + "\n";
        }
    }
}


