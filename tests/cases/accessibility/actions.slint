component Button {
    callback clicked();
    accessible-role: button;
    accessible-label: "Hello";
    accessible-action-default => {
        debug("DEFAULT");
        clicked()
    }
    accessible-value: value;
    in-out property <int> value;
    accessible-action-set-value(x) => {
        debug("SetValue", x);
        value = x.to-float();
    }
}

component TestCase {
    Rectangle {
        x: 100px;
        y: 100px;

        btn := Button {
            x: 23px;
            y: 43px;
            width: 143px;
            height: 76px;
        }
    }

    public function call() {
        btn.accessible-action-set-value(45);
    }
}

