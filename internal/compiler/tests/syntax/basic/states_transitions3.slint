export Demo := Window {
    width:  300px;
    height: 300px;
    property <bool> toggle;
    t:= Text {
        text: "Hello World";
        font-size: 24px;
    }

    states [
        moving when toggle: {
            t.y: 100px;
        }
    ]

    transitions [
        in moving: {
            animate y { duration: 5s; }
            //      ^error{The property is not changed as part of this transition}
        }
        out moving: {
            animate t.x { duration: 100ms; }
            //      ^error{The property is not changed as part of this transition}
        }
    ]
}
