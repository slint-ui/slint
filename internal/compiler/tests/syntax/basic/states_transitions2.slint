export TestCase := Rectangle {
    property<bool> checked;
    property <int> border;
    animate background { }
    states [
        checked when checked: {
            color: blue;
            border: 42;
        }
    ]

    transitions [
        in does_not_exist: {
//         ^error{State 'does-not-exist' does not exist}
            animate * { }
        }
        in checked: {
            animate background { }
//                  ^error{The property 'background' cannot have transition because it already has an animation}
        }
    ]


}
