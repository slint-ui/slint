export component Base inherits Rectangle {
    slot header;
    slot footer;

    VerticalLayout {
        header {}
        @children
        footer {}
    }
}

export component Test inherits Rectangle {
    Base {
        header << Rectangle {
            background: blue;
        }
        Text { text: "Main Content"; }
        footer << Rectangle {
            background: gray;
        }
    }
}

