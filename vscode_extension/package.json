{
	"name": "sixtyfps-vscode",
	"displayName": "SixtyFPS-vscode",
	"description": "SixtyFPS Language extension",
	"version": "0.2.0",
	"publisher": "SixtyFPS",
	"icon": "extension-logo.png",
	"license": "GPL-3.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/sixtyfpsui/sixtyfps"
	},
	"engines": {
		"vscode": "^1.52.0"
	},
	"categories": [
		"Programming Languages"
	],
	"preview": true,
	"activationEvents": [
		"onLanguage:sixtyfps"
	],
	"main": "./out/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "sixtyfps",
				"aliases": [
					"SixtyFPS"
				],
				"extensions": [
					".60"
				],
				"configuration": "language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "sixtyfps",
				"scopeName": "source.sixtyfps",
				"path": "./sixtyfps.tmLanguage.json"
			}
		],
		"commands": [
			{
				"command": "sixtyfps.showPreview",
				"title": "Show Preview",
				"category": "SixtyFPS"
			},
			{
				"command": "sixtyfps.reload",
				"title": "Restart server",
				"category": "SixtyFPS"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "sixtyfps.showPreview",
					"when": "editorLangId == sixtyfps"
				},
				{
					"command": "sixtyfps.reload"
				}
			]
		},
		"configuration": {
			"type": "object",
			"title": "SixtyFPS",
			"properties": {
				"sixtyfps.lsp-args": {
					"type": "array",
					"items": {
						"type": "string"
					},
					"description": "The command line arguments passed to the SixtyFPS LSP server"
				}
			}
		}
	},
	"dependencies": {
		"vscode-languageclient": "^7"
	},
	"files": [
		"bin/sixtyfps-lsp-*"
	],
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"local-package": "mkdir -p bin && cp ../target/debug/sixtyfps-lsp bin/ && npx vsce package",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.52.0",
		"@typescript-eslint/eslint-plugin": "^4.9.0",
		"@typescript-eslint/parser": "^4.9.0",
		"eslint": "^7.15.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.1.2",
		"vscode-test": "^1.4.1"
	}
}
