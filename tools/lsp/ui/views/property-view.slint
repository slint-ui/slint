component ChildIndicator {
    out property <bool> open: false;
    
    // in property <> content;
    x: - EditorSpaceSettings.group-indent * 2;

    Rectangle {
        width: 100%;
        height: 1cm;
        expand := TouchArea {
            clicked => {
                root.open = !root.open;
            }
            indicator := Image {
                colorize: Palette.foreground;
                visible: expand.has-hover;
                source: Icons.chevron-down;
                width: 16px;
                height: 16px;
                rotation-angle: root.open ? 0deg : -90deg;
            }
        }
    }
}

